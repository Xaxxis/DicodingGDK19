<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_movie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/colorCardView"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/primaryText"
                    android:text="@string/tab_movie"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatRatingBar
                            android:id="@+id/rt_bar"
                            android:layout_width="77dp"
                            android:layout_height="wrap_content"
                            android:theme="@style/RatingBar" />

                        <TextView
                            android:id="@+id/tv_rate"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:text="7/10" />

                        <TextView
                            android:id="@+id/tv_release_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_light"
                            android:layout_marginRight="@dimen/activity_vertical_margin"
                            android:textAlignment="viewEnd"
                            android:text="January, 16 2019" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="274dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TableLayout
                                android:layout_width="255dp"
                                android:layout_height="wrap_content">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/activity_horizontal_margin">

                                    <TextView
                                        style="@style/TextField"
                                        android:layout_marginRight="25dp"
                                        android:text="Genre" />

                                    <TextView
                                        android:id="@+id/tv_genre"
                                        style="@style/TextValue"
                                        tools:text="COMEDY, ACTION, DRAMA" />
                                </TableRow>
                            </TableLayout>

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp">

                                    <TextView
                                        style="@style/TextField"
                                        android:layout_marginRight="10dp"
                                        android:text="Duration" />

                                    <TextView
                                        android:id="@+id/tv_duration"
                                        style="@style/TextValue"
                                        android:text="2h 5m" />
                                </TableRow>
                            </TableLayout>

                            <LinearLayout
                                android:layout_marginLeft="6dp"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:onClick="onToggleStar"
                                    android:clickable="true"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    
                                    <ToggleButton
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:id="@+id/tgl_favorite"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:textOn=""
                                        android:textOff=""/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="@string/btn_favorite"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">

                                    <ImageButton
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:id="@+id/btn_share"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_share_black_24dp"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="@string/btn_share"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_cover"
                                android:layout_width="98dp"
                                android:layout_height="100dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/poster_themule" />
                        </RelativeLayout>
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>